{
  "apt": {
    "mirror": "us-east-1.ec2"
  },
  "postgresql": {
    "password": {
      "postgres": "wercker"
    },
    "version" : "9.2",
    "enable_pgdg_apt" : true,
    "dir" : "/var/lib/postgresql/9.2/main",
    "server" : { "packages": ["postgresql-9.2"] },
    "ssl" : false,
    "config" : { "listen_address" : "localhost"},
    "pg_hba" : [
      { "comment" : "# wercker: allow all", 
      "type" : "host" , "db" :"all", "user" : "all", "addr" : "0.0.0.0/0", "method" : "md5"},
      { "comment" : "# wercker: allow all ip6", 
      "type" : "host" , "db" :"all", "user" : "all", "addr" : "::1/128", "method" : "md5"}]

  },
  "run_list":[
    "recipe[apt]",
    "recipe[postgresql::apt_pgdg_postgresql]",
    "recipe[postgresql::server]"
  ]
}
